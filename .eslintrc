{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "mocha": true
  },
  "rules": {
    "no-cond-assign": "warn",
    "curly": ["error", "multi-or-nest"],
    "no-debugger": "warn",
    "eqeqeq": "error",
    "no-eval": "error",
    "guard-for-in": "warn",
    "wrap-iife": "error",
    "linebreak-style": ["error", "unix"],
    "new-cap": "error",
    "no-caller": "error",
    "no-empty": "error",
    "no-new": "warn",
    "no-plusplus": "off",
    "no-undef": "error",
    "dot-notation": "error",
    "strict": "off",
    "no-unused-vars": "warn",
    "array-bracket-spacing": ["error", "never"],
    "space-in-parens": ["error", "never"],
    "quote-props": [
      "error",
      "as-needed",
      { "keywords": true }
    ],
    "key-spacing": [
      "error",
      {
        "beforeColon": false,
        "afterColon": true
      }
    ],
    "space-unary-ops": [
      "error",
      {
        "words": false,
        "nonwords": false
      }
    ],
    "no-mixed-spaces-and-tabs": "error",
    "no-trailing-spaces": "error",
    "comma-dangle": ["error", "never"],
    "no-with": "error",
    "no-multiple-empty-lines": "error",
    "space-before-blocks": ["error", "always"],
    "comma-style": ["error", "last"],
    "space-infix-ops": "error",
    "eol-last": "error",
    "keyword-spacing": "error",
    "consistent-this": ["error", "self"],
    "quotes": [
      "error",
      "single",
      { "avoidEscape": true }
    ],
    "indent": [
      "error",
      2,
      { "SwitchCase": 1 }
    ]
  }
}
